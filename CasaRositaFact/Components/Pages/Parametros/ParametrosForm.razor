@page "/parametros"
@using CasaRositaFact.Components.Pages.Categorias
@using CasaRositaFact.Components.Pages.Empresa
@using CasaRositaFact.Components.Pages.Otros
@using CasaRositaFact.Components.Pages.Rubros
@using CasaRositaFact.Components.Pages.Unidades_Medidas


<PageTitle>Parámetros del Sistema</PageTitle>

<div class="bg-light p-4">
    <h2 class="text-dark fw-bold  mb-2">Parámetros del Sistema</h2>
</div>

<!-- Tabs para navegar -->
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link @(activeTab == 0 ? "active custom-active" : "")" @onclick="@(() => CambiarTab(0))">Rubros</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == 1 ? "active custom-active" : "")" @onclick="@(() => CambiarTab(1))">Categorías</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == 2 ? "active custom-active" : "")" @onclick="@(() => CambiarTab(2))">Unidades</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == 3 ? "active custom-active" : "")" @onclick="@(() => CambiarTab(3))">Empresa</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == 4 ? "active custom-active" : "")" @onclick="@(() => CambiarTab(4))">Otros</a>
    </li>
</ul>


<!-- Contenido de pestañas -->
@if (activeTab == 0)
{
    <RubroForm />
}
else if (activeTab == 1)
{
    <CategoriaForm />
}
else if (activeTab == 2)
{
    <UnidadesMedidaForm />
}
else if (activeTab == 3)
{
    <DatosEmpresaForm />
}
else if (activeTab == 4)
{
    <OtrosParamForm />
}

@code {
    int activeTab = 0;

    void CambiarTab(int tabIndex)
    {
        activeTab = tabIndex;
    }
}

<style>
    /* Cambiar color de fondo al seleccionar */
    .nav-tabs .nav-item .nav-link.custom-active {
        background-color: #007bff;
        color: white;
        border-radius: 5px;
    }

    /* Estilo para el hover en los elementos no seleccionados */
    .nav-tabs .nav-item .nav-link:hover {
        background-color: #f1f1f1;
        color: #007bff;
    }

    /* Estilo general para las pestañas no activas */
    .nav-tabs .nav-item .nav-link {
        color: #555555;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer; /* 👈 AÑADÍ ESTO */
    }
</style>
